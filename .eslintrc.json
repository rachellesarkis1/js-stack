{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "flowtype",
    "compat"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "semi": [2, "always"],
    "no-unexpected-multiline": 2,
    "compat/compat": 2,
    "quotes": ["error", "double"],
    "object-curly-newline": "off",
    "implicit-arrow-linebreak": "off",
    "operator-linebreak": "off",
    "indent": "off",
    "jsx-a11y/no-redundant-roles": "off",
    "comma-dangle": ["error", "only-multiline"]
  },
  "settings": {
    "polyfills": ["fetch"]
  }
}
